<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="4000"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="1440">

    <shape
        android:innerRadius="12dp"
        android:shape="ring"
        android:thickness="2dp"
        android:useLevel="false">
        <size
            android:width="24dp"
            android:height="24dp"/>

        <gradient
            android:centerColor="#99ffffff"
            android:centerY="0.5"
            android:endColor="#FF555B"
            android:startColor="#55ffffff"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>

</rotate>