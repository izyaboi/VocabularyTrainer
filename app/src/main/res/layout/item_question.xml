<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="de.fluchtwege.untitled.questions.QuestionViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_large"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_small"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@{viewModel.information}"
            android:textSize="@dimen/text_large"
            tools:text="Name der Lektion"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_normal"
            android:gravity="center"
            android:text="@{viewModel.answer}"
            android:padding="@dimen/margin_small"
            tools:text="Beschreibeung der Lektion in viel Detail und mit Liebe fuer Praezision"/>

    </LinearLayout>
</layout>